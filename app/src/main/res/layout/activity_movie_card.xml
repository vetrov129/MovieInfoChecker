<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.moviecard.MovieCardActivity"
        android:background="@color/colorAutoDark"
        android:id="@+id/cardContainer">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/ivCardPoster"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_poster_height"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                android:src="@color/colorBlack"
                android:scaleType="centerCrop"/>

        <ImageView
                android:id="@+id/ivStarCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="10dp"
                android:layout_margin="16dp"

                android:src="@drawable/ic_empty_star_white"
                android:background="@drawable/star_background"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/gradientContainer"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_poster_height"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/ivCardPoster"
                android:background="@drawable/poster_gradient">

            <TextView
                    android:id="@+id/tvTitleCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tvDateCard"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="254dp"

                    android:text=""
                    android:textColor="@color/colorWhite"
                    android:textSize="28sp"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"/>

            <TextView
                    android:id="@+id/tvDateCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tvDurationCard"
                    android:layout_marginStart="16dp"

                    android:text=""
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"
                    android:textColor="@color/colorWhite"/>

            <TextView
                    android:id="@+id/tvCountriesCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@id/tvDateCard"
                    app:layout_constraintTop_toTopOf="@id/tvDateCard"
                    app:layout_constraintBottom_toBottomOf="@id/tvDateCard"
                    android:layout_marginStart="16dp"

                    android:text=""
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"
                    android:textColor="@color/colorWhite"/>

            <TextView
                    android:id="@+id/tvDurationCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/gradientContainer"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="4dp"

                    android:text=""
                    android:fontFamily="@font/montserrat"
                    android:textSize="16sp"
                    android:textColor="@color/colorWhite"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
                android:id="@+id/tvPlotCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/gradientContainer"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"

                android:text=""
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/montserrat"
                android:textSize="14sp"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvActorsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvPlotCard"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <TextView
                android:id="@+id/tvSimilarCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rvActorsCard"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"

                android:text=""
                android:textColor="@color/colorWhite"
                android:textSize="22sp"
                android:fontFamily="@font/montserrat"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSimilarCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSimilarCard"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>
