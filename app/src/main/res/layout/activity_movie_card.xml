<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MovieCardActivity"
        android:background="@color/colorBGCard">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/ivPosterCM"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@color/colorAccent"
                android:scaleType="centerCrop"/>


        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/gradientContainer"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintBottom_toBottomOf="@+id/ivPosterCM"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/poster_gradient">

            <TextView
                    android:id="@+id/tvTitleCM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test_title"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/montserrat"
                    android:textSize="28sp"
                    android:textFontWeight="700"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="58dp"/>

            <TextView
                    android:id="@+id/tvYearCM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test_year"
                    app:layout_constraintTop_toBottomOf="@id/tvTitleCM"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/montserrat"
                    android:textSize="20sp"
                    android:textFontWeight="600"/>

            <TextView
                    android:id="@+id/tvDurationCM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/test_duration"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"
                    android:textFontWeight="600"
                    app:layout_constraintStart_toEndOf="@+id/tvYearCM"
                    app:layout_constraintBottom_toBottomOf="@+id/tvYearCM"
                    app:layout_constraintTop_toTopOf="@+id/tvYearCM"
                    android:layout_marginStart="14dp"/>

            <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/tvDurationCM"
                    app:layout_constraintBottom_toBottomOf="@+id/tvYearCM"
                    app:layout_constraintTop_toTopOf="@+id/tvYearCM"
                    android:orientation="horizontal"
                    android:nestedScrollingEnabled="true"
                    android:layout_marginEnd="8dp"
                    android:scrollbars="none">

            <TextView
                    android:id="@+id/tvDirectorsCM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@string/test_directors"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"
                    android:textFontWeight="600"
                    android:layout_marginStart="14dp"/>
            </HorizontalScrollView>

            <HorizontalScrollView
                    android:id="@+id/svStars"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvYearCM"
                    android:orientation="horizontal"
                    android:nestedScrollingEnabled="true"
                    android:layout_marginEnd="8dp"
                    android:scrollbars="none">
                <TextView
                        android:id="@+id/tvStarsCM"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="@string/test_stars"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/montserrat"
                        android:textSize="18sp"
                        android:textFontWeight="500"
                        android:layout_marginHorizontal="8dp"/>
            </HorizontalScrollView>

            <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/svStars"
                    app:layout_constraintStart_toStartOf="parent"
                    android:orientation="horizontal"
                    android:nestedScrollingEnabled="true"
                    android:layout_marginEnd="8dp"
                    android:scrollbars="none">
            <TextView
                    android:id="@+id/tvGenresCM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@string/test_genres"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/montserrat"
                    android:textSize="18sp"
                    android:textFontWeight="500"
                    android:layout_marginHorizontal="8dp"/>
            </HorizontalScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
                android:id="@+id/tvPlotCM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/test_plot"
                app:layout_constraintTop_toBottomOf="@id/gradientContainer"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="500"
                android:padding="8dp"
                android:textSize="14sp"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvActorsCM"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:layout_constraintTop_toBottomOf="@+id/tvPlotCM"
                app:layout_constraintStart_toStartOf="parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                android:padding="8dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
