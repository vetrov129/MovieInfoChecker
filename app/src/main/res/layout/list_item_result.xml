<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="@color/colorAccent"
        android:layout_marginVertical="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/ivPosterResult"
                android:layout_width="128dp"
                android:layout_height="176dp"
                android:src="@drawable/test_poster"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="8dp"/>

        <TextView
                android:id="@+id/tvTitleResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="204dp"
                android:text="@string/test_title"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="700"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/ivPosterResult"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="6dp"/>

        <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="204dp"
                android:text="@string/test_crew"
                android:fontFamily="@font/montserrat"
                android:textFontWeight="600"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@+id/ivPosterResult"
                app:layout_constraintTop_toBottomOf="@+id/tvTitleResult"
                android:layout_marginStart="6dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>